<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrazyMathematicianApp.Page2"
             NavigationPage.HasNavigationBar="false"
             BackgroundColor="#333"
             Padding="20, 130, 20, 0">

    <StackLayout>
        
        <Label Text="Διάλεξε Ομάδα Προσανατολισμού"
               Style="{StaticResource mainLabelStyle}"
               HeightRequest="150"
               FontSize="20"/>

        <Button Text="ΑΝΘΡΩΠΙΣΤΙΚΩΝ ΣΠΟΥΔΩΝ"
                Style="{StaticResource buttonStyle}"
                Clicked="Button_1"/>
        
        <StackLayout Padding="0, 0, 0, 10"></StackLayout>
        
        <Button Text="ΘΕΤΙΚΩΝ ΣΠΟΥΔΩΝ"
                Style="{StaticResource buttonStyle}"
                Clicked="Button_2"/>

        <StackLayout Padding="0, 0, 0, 10"></StackLayout>

        <Button Text="ΣΠΟΥΔΩΝ ΟΙΚΟΝΟΜΙΑΣ ΚΑΙ ΠΛΗΡΟΦΟΡΙΚΗΣ"
                Style="{StaticResource buttonStyle}"
                Clicked="Button_3"/>

    </StackLayout>

</ContentPage>